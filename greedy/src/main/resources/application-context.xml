<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
    
	<bean id="greedy" class="greedy.Greedy">
		<constructor-arg name="coinCalculatorFactory" ref="coinCalculatorFactory"/>
		<constructor-arg name="messageSource" ref="messageSource"/>
		<constructor-arg name="currencyParser" ref="currencyParser"/>
	</bean>

    <bean id="coinCalculatorFactory" class="greedy.CoinCalculatorFactory"></bean>
    
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
    	<property name="basename" value="i18n/messages"/>
    </bean>
    
    <bean id="currencyParser" class="greedy.CurrencyParser">
    	<property name="localeCodesForAcceptedCurrencyFormats">
    		<array>
    			<value>_en_US</value>
    			<value>_es_US</value>
    		</array>
    	</property>
    </bean>
    	
</beans>
