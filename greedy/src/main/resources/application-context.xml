<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
    
	<bean id="greedy" class="greedy.Greedy">
		<constructor-arg name="coinCalculator" ref="USDollarCoinCalculator"/>
		<constructor-arg name="messageSource" ref="messageSource"/>
		<constructor-arg name="currencyParser" ref="currencyParser"/>
	</bean>

    <bean id="USDollarCoinCalculator" class="greedy.CoinCalculatorImpl">
    	<property name="coinTypesAvailable">
    		<map>
    			<entry key="100" value="coin.1"/>
    			<entry key="25" value="coin.2"/>
    			<entry key="10" value="coin.3"/>
    			<entry key="5" value="coin.4"/>
    			<entry key="1" value="coin.5"/>
    		</map>
    	</property>
    </bean>
    
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
    	<property name="basename" value="i18n/messages"/>
    </bean>
    
    <bean id="currencyParser" class="greedy.CurrencyParser">
    	<property name="localeCodesForAcceptedCurrencyFormats">
    		<array>
    			<value>_en_US</value>
    			<value>_es_US</value>
    		</array>
    	</property>
    </bean>
    	
</beans>
