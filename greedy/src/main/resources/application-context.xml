<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">
    
	<bean id="greedy" class="greedy.Greedy">
		<constructor-arg name="coinCalculator" ref="coinCalculator"/>
		<constructor-arg name="messageSource" ref="messageSource"/>
	</bean>

    <bean id="coinCalculator" class="greedy.CoinCalculatorImpl">
    	<constructor-arg name="coinSpec" ref="USDollarCoinSpec"/>
    </bean>
    
    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
    	<property name="basename" value="i18n/messages"/>
    </bean>
    
    <bean id="USDollarCoinSpec" class="greedy.USDollarCoinSpec"></bean>
    	
</beans>
